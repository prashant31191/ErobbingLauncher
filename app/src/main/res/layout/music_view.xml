<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="64dp"
    android:background="#00ffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/title"
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="bottom|right"
            android:maxLines="1"
            android:textColor="#ffffffff"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/author"
            android:layout_width="90dp"
            android:layout_height="26dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="top|right"
            android:maxLines="1"
            android:textColor="#4dffffff"
            android:textSize="8sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="64dp"
        android:layout_weight="3"
        android:gravity="center">

        <com.erobbing.erobbinglauncher.widget.CircleProgress.CircleProgress
            android:id="@+id/icon_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"
            app:arcbgColor="@color/arcbgColor"
            app:bgShow="true"
            app:borderWidth="1dp"
            app:degree="0"
            app:progressColor="@color/progressColor"
            app:progressStyle="arc"
            app:radius="20dp"
            app:tickDensity="3"
            app:unprogresColor="@color/unprogresColor">
        </com.erobbing.erobbinglauncher.widget.CircleProgress.CircleProgress>
    </LinearLayout>
</LinearLayout>